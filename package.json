{
  "name": "nodejs-ts-starter",
  "version": "1.0.0",
  "description": "NodeJs typescript simple starter",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc -w",
    "clean": "rimraf dist",
    "dev": "nodemon --watch src --ext ts,json --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "keywords": [
    "Nodejs",
    "Typescript",
    "VSCode debug",
    "nodeman",
    "ts-node",
    "jest"
  ],
  "author": "Vincent Mao",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "uuid": "^11.0.1"
  }
}
